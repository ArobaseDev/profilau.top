{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
<main class="max-w-screen-sm mx-auto py-5 md:py-16 px-4">


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center" style="color: #4F46E5;">Créer un Compte</h2>

            {# Affiche les erreurs du formulaire #}
            {{ form_errors(registrationForm) }}

            {# Démarrer le formulaire #}
            {{ form_start(registrationForm, {'attr': {'class': 'p-4 border rounded shadow-sm', 'style': 'background-color: #f8f9fa;'}}) }}
            
            <div class="form-group mb-4">
                {{ form_label(registrationForm.email, 'Adresse Email', {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #333;'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #4F46E5; border-radius: 10px; padding: 10px;'}}) }}
                {{ form_errors(registrationForm.email, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="form-group mb-4">
                {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #333;'}}) }}
                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #4F46E5; border-radius: 10px; padding: 10px;'}}) }}
                {{ form_errors(registrationForm.firstName, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="form-group mb-4">
                {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #333;'}}) }}
                {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #4F46E5; border-radius: 10px; padding: 10px;'}}) }}
                {{ form_errors(registrationForm.lastName, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="form-group mb-4">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #333;'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #4F46E5; border-radius: 10px; padding: 10px;'}}) }}
                {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <button type="submit" class="btn btn-primary w-full" style="background-color: #4F46E5; border: none; padding: 12px; font-weight: bold; border-radius: 12px;">
                S'inscrire
            </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>


    </main>
{% endblock %}
